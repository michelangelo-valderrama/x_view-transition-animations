---
import Layout from '../layouts/Layout.astro'
import books from '../data/books.json'

const { book } = Astro.params

const info = books.find((b) => b.id === book)

if (!info) {
  return Astro.redirect('/404')
}
---

<Layout title=`Libro ${info.title}`>
  <main class="m-auto max-w-4xl">
    <header>
      <a
        href="/"
        class="fixed left-2 top-2 m-4 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-full text-sm p-2.5 text-center inline-flex items-center mr-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
      >
        <svg
          class="w-4 h-4 rotate-180"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 14 10"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 5h12m0 0L9 1m4 4L9 9"></path>
        </svg>
        <span class="sr-only">Icon description</span>
      </a>
      <h2
        class="scale-75 text-6xl md:text-8xl font-bold uppercase text-center py-8 px-4"
        style="view-transition-name: title"
      >
        Libros de
        <span class="block text-[36px] md:text-[58px]"> programaci√≥n</span>
      </h2>
    </header>
    <div class="grid md:grid-cols-[350px_1fr] gap-x-10 mt-0 md:mt-16 p-6 md:p-0">
      <div class="flex flex-col mb-12 md:mb-0">
        <picture class="mb-8 w-full relative">
          <img
            class="aspec-[800/1057] h-full object-cover w-full rounded"
            src={info.img}
            style=`view-transition-name: book-${info.id}`
            alt={`Portada del libro ${info.title}`}
          />
        </picture>
        <a
          href="#"
          type="button"
          class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
        >
          <svg
            class="w-3.5 h-3.5 mr-2"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="currentColor"
            viewBox="0 0 18 21"
          >
            <path
              d="M15 12a1 1 0 0 0 .962-.726l2-7A1 1 0 0 0 17 3H3.77L3.175.745A1 1 0 0 0 2.208 0H1a1 1 0 0 0 0 2h.438l.6 2.255v.019l2 7 .746 2.986A3 3 0 1 0 9 17a2.966 2.966 0 0 0-.184-1h2.368c-.118.32-.18.659-.184 1a3 3 0 1 0 3-3H6.78l-.5-2H15Z"
            ></path>
          </svg>
          Comprar ahora
        </a>
      </div>

      <aside>
        <h1 class="text-6xl font-black mb-4">{info.title}</h1>
        <p class="text-lg mb-4">{info.opinion}</p>
        <p>
          <strong>Autor:</strong>
          <span class="font-semibold text-gray-800">{info.autor}</span>
        </p>
      </aside>
    </div>
  </main>
</Layout>
